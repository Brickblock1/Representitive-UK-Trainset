	0..1966		: palette_2cc(COLOUR_DARK_GREEN, COLOUR_DARK_GREEN) ;
	1984..1996	: sw_guc_col_sectorised ;
	1996..2004	: palette_2cc(COLOUR_RED, COLOUR_YELLOW);
	palette_2cc(COLOUR_DARK_BLUE, COLOUR_WHITE) ;
}


